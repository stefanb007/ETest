@using System.Web.Optimization
<!DOCTYPE html>
<html lang="mk" data-ng-app="ETestApp">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title update-page-title></title>
    <link rel="shortcut icon" href="/favicon.ico"/>
    <base href="/" />
    
    <script type="text/javascript">
        @*var availableLanguages = @Html.Raw(JsonSeria)*@
    </script>
    
    @*CSS*@
    <link href="@string.Format("/Content/bootstrap.css")" rel="stylesheet"/>
    
    @*JS*@
    @Scripts.Render(string.Format("~/bundles/jquery.min.js"))
    @Scripts.Render(string.Format("~/bundles/bootstrap.min.js"))
    @Scripts.Render(string.Format("~/bundles/angular.min.js"))
    @Scripts.Render(string.Format("~/bundles/angular-plugins.min.js"))
    @Scripts.Render(string.Format("~/bundles/plugins.min.js"))

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>